<% if notice.present? %>
  <div class="alert alert-success" role="alert">
    <%= notice %>
  </div>
<% end %>

<h1><%= Book.model_name.human %></h1>

<p><%= current_user.email %> でログイン中</p>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= Book.human_attribute_name('title') %></th>
      <th><%= Book.human_attribute_name('author') %></th>
      <th><%= Book.human_attribute_name('published_on') %></th>
      <th><%= Book.human_attribute_name('showing') %></th>
      <th><%= Book.human_attribute_name('price') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.published_on %></td>
        <td><%= book.showing %></td>
        <td><%= book.price %></td>
        <td><%= link_to t('.show'), book %></td>
        <td><%= link_to t('.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('.destroy'), book, method: :delete, data: { confirm: t('.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_book_path %>
<br>
<%= link_to t('.logout'), destroy_user_session_path, method: :delete %>
