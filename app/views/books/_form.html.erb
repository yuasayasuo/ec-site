<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation" class="card border-danger">
      <div class="card-header bg-danger text-white">
        <%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:
      </div>

      <div class="card-body">
        <ul class="mb-0">
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title %>
  </div>

  <div class="form-group">
    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author %>
  </div>

  <div class="form-group">
    <%= form.label :published_on %>
    <%= form.date_select :published_on, id: :book_published_on %>
  </div>

  <div class="form-group">
    <%= form.label :showing %>
    <%= form.check_box :showing, id: :book_showing %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, id: :book_price %>
  </div>
  
  <div class="form-group">
    <%= collection_check_boxes :book, :tag_ids, Tag.all, :id, :name %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
